<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="180dp"
    android:layout_height="80dp"
    android:background="#90e1edfd" >

    <TextView
        android:id="@+id/temp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:text=""
        android:textColor="@color/text_color_night"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/units1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/temp1"
        android:text="@string/temp_units"
        android:textColor="@color/text_color_night"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/city"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp1"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text=""
        android:textColor="@color/text_color_day"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:alpha="0.5"
        android:padding="10dp" />

</RelativeLayout>